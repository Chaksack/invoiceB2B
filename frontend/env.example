# Invoice B2B Environment Configuration
# Copy this file to .env and configure with your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/invoice_financing_db
DB_POOL_MAX=20
DB_POOL_MIN=4
DB_QUERY_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a strong JWT secret (min 32 characters)
# Use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_please_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW_MS=900000
SLOW_DOWN_DELAY_MS=1000

# =============================================================================
# REQUEST LIMITS
# =============================================================================
MAX_REQUEST_SIZE=10mb
MAX_FILE_SIZE=5mb

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true
ENABLE_DB_LOGGING=false

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=false

# =============================================================================
# EMAIL CONFIGURATION (for future use)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@invoiceb2b.com

# =============================================================================
# FILE UPLOAD CONFIGURATION (for future use)
# =============================================================================
UPLOAD_DIR=uploads
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png
ENABLE_VIRUS_SCAN=false

# =============================================================================
# REDIS CONFIGURATION (optional, for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
ENABLE_CACHING=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Set these in production environment
# NODE_ENV=production
# BASE_URL=https://your-domain.com
# DATABASE_URL=postgresql://user:password@host:5432/db
# JWT_SECRET=your-production-jwt-secret
# ALLOWED_ORIGINS=https://your-domain.com 